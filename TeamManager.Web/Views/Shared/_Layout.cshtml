<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gerenciador de Habilidades por Equipe</title>

    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TeamManager.Application.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main">
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <a class="navbar-brand" href="https://www.eldorado.org.br/" target="_blank">
                    <img width="136" height="56" role="img" src="~/img/logo_eldorado.svg" />
                </a>
                <a class="title" role="button" asp-controller="Home" asp-action="Index">Gestão de Habilidades</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-people-group"></i> Equipes</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-dark" role="button" asp-area="" asp-controller="Team" asp-action="List">Cadastrar Equipes</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" role="button" asp-area="" asp-controller="Collaborator" asp-action="Index">Vincular Colaboradores</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-person"></i> Colaboradores</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-dark" role="button" asp-area="" asp-controller="Team" asp-action="List">Cadastrar Colaboradores</a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-computer"></i> Habilidades</a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item text-dark" role="button" asp-area="" asp-controller="Team" asp-action="List">Cadastrar Habilidades</a>
                                </li>
                                <li>
                                    <a class="dropdown-item text-dark" role="button" asp-area="" asp-controller="Collaborator" asp-action="Index">Cadastrar Tipos de Habilidade</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            @RenderBody()
        </main>
        <footer class="border-top footer text-muted" style="margin-top: 30px">
            <div class="container">
                &copy; 2023 - Instituto Eldorado - DSP - Estágio de Inverno
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
